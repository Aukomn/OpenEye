<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:label="@string/title_home"
       />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.aukomn.myopeneye.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.aukomn.myopeneye.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />
    <fragment
        android:id="@+id/scrollingFragment"
        android:name="com.aukomn.myopeneye.ui.ScrollingFragment"
        android:label="放映厅"
        tools:layout="@layout/fragment_scrolling" />
    <activity
        android:id="@+id/homeActivity"
        android:name="com.aukomn.myopeneye.ui.HomeActivity"
        android:label="activity_home"
        tools:layout="@layout/activity_home" />
</navigation>